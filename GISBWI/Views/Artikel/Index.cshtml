@model IEnumerable<GISBWI.ADODotNet.artikel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BackEndLayout.cshtml";
}

<div class="mainbar">
     <!-- Page heading -->
      <div class="page-head">
        <h2 class="pull-left"><i class="fa fa-table"></i> Dynamic Tables</h2>

        <!-- Breadcrumb -->
        <div class="bread-crumb pull-right">
          <a href="index.html"><i class="fa fa-home"></i> Home</a> 
          <!-- Divider -->
          <span class="divider">/</span> 
          <a href="#" class="bread-current">Dashboard</a>
        </div>

        <div class="clearfix"></div>

      </div>
      <!-- Page heading ends -->
<p>
    

</p>
       <!-- Matter -->
	    <div class="matter">
        <div class="container">
          <div class="row">
            <div class="col-md-12">

              <div class="widget">
                <div class="widget-head">
                  <div class="pull-left">Data Tables</div>
                  <div class="widget-icons pull-right">
                    <a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a> 
                    <a href="#" class="wclose"><i class="fa fa-times"></i></a>
                  </div>  
                  <div class="clearfix"></div>
                </div>
                <div class="widget-content">
                  <div class="padd">
                    
							<!-- Table Page -->
							<div class="page-tables">
								<!-- Table -->
								<div class="table-responsive">
									<table cellpadding="0" cellspacing="0" border="0" id="data-table" width="100%">
                                        <thead>
                                        <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.idartikel)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.judul)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.tanggal_buat)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.status)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.keterangan)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.admin.nama)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.jenis_artikel.nama)
                                        </th>
                                    </tr>
                                    </thead>
                                     @foreach (var item in Model) {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.idartikel)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.judul)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.tanggal_buat)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.status)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.keterangan)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.admin.nama)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.jenis_artikel.nama)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id=item.idartikel }) |
                                                    @Html.ActionLink("Details", "Details", new { id=item.idartikel }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id=item.idartikel })
                                                </td>
                                            </tr>
                                        }
                                    </table>
									<div class="clearfix"></div>
								</div>
								</div>
							</div>

					
                  </div>
                  <div class="widget-foot">
                    <!-- Footer goes here -->
                  </div>
                </div>
              </div>  
              
            </div>
          </div>
        </div>
    </div>
		<!-- Matter ends -->